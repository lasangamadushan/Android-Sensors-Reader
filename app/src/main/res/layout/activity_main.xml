<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/accelX"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="X:"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/accelY"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/accelX"
        android:layout_below="@+id/accelX"
        android:text="Y:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/accelZ"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/accelX"
        android:layout_below="@+id/accelY"
        android:text="Z:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/magnoX"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/accelX"
        android:text="X:"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/magnoY"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/accelX"
        android:text="Y:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:id="@+id/magnoZ"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/accelY"
        android:text="Z:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/gyroX"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/accelX"
        android:layout_below="@+id/textView6"
        android:text="X:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/gyroY"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/accelX"
        android:layout_below="@+id/gyroX"
        android:text="Y:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/gyroZ"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/accelX"
        android:layout_below="@+id/gyroY"
        android:text="Z:"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/light"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginEnd="95dp"
        android:text=""
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <TextView
        android:id="@+id/proximity"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/light"
        android:layout_alignTop="@+id/textView9"
        android:text=""
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="154dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Start" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:text="Accelerometer"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="18dp"
        android:text="Magnetometer"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/accelX"
        android:layout_marginTop="164dp"
        android:text="Gyroscope"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/accelX"
        android:layout_marginBottom="164dp"
        android:text="Light"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/accelX"
        android:layout_marginBottom="122dp"
        android:text="Proximity"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

</RelativeLayout>